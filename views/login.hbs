<div class='title'>
  <h1>Log in</h1>
</div>

<form id='loginForm' action='/login' method='post' class='form-wrapper'>
  <div class='form-group'>
    <label for='email'>Email
      <span class='form-required'>(required)</span>
      :</label>
    <input
      id='email'
      class='form-control'
      type='email'
      name='email'
      value='{{user.email}}'
      required
    />
  </div>

  <div class='form-group'>
    <label for='password'>Password
      <span class='form-required'>(required)</span>
      :</label>
    <input
      id='password'
      class='form-control'
      type='password'
      name='password'
      value='{{user.password}}'
      required
    />
  </div>

  <div class='check-field'>
    Please leave this blank
    <input type='text' name='check' id='check' value='' />
  </div>

  <div class='actions'>
    <a href='/' class='btn btn-light'>Cancel</a>
    <button class='btn btn-primary'>Log in</button>
  </div>
</form>