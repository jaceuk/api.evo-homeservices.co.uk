<div class='title'>
  <h1>{{title}}</h1>
</div>

<form id='Form' action='{{formAction}}' method='post'>
  <input type='hidden' name='id' id="id" value="{{review.id}}" />

  <div class='form-group'>
    <label for='date'>Date
      <span class='form-required'>(required)</span>:</label>
    <input
      id='date'
      class='form-control'
      type='date'
      name='date'
      value='{{review.date}}'
      required
    />
  </div>

  <div class='form-group'>
    <label for='postcode'>Postcode
      <span class='form-required'>(required)</span>:</label>

    <select
      class='form-select'
      id='postcode'
      name='postcode'
      required
    >
      <option value=''>-- Please select a postcode --</option>
      {{#each postcodes}}
        <option value='{{this.postcode}}' {{#ifCond this.postcode '==' ../review.postcode}}selected{{/ifCond}}>{{this.postcode}}</option>
      {{/each}}
    </select>
  </div>

  <div class='form-group'>
    <label for='title'>Title
      <span class='form-required'>(required)</span>:</label>
    <input
      class='form-control'
      type='text'
      id='title'
      name='title'
      value='{{review.title}}'
      required
    />
  </div>

  <div class='form-group'>
    <label for='text'>Text
      <span class='form-required'>(required)</span>:</label>
    <textarea
      rows='10'
      class='form-control'
      type='text'
      id='text'
      name='text'
      required
    >{{review.text}}</textarea>
  </div>

  <div class='actions'>
    <a href='/reviews' class='btn btn-light'>Cancel</a>
    <button class='btn btn-primary'>Save review</button>
  </div>
</form>